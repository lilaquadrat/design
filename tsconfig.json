{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES2019",
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": false,
        "strictNullChecks": false,
        "ignoreDeprecations": "5.0",
        "baseUrl": "./",
        "paths": {
            "@screens/*": [
                "src/screens/*"
            ],
            "@partials/*": [
                "src/partials/*"
            ],
            "@modules/*": [
                "modules/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@libs/*": [
                "src/libs/*"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@mixins/*": [
                "src/mixins/*"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@mock/*": [
                "test/mock/*"
            ],
            "@worker/*": [
                "./worker/*"
            ],
            "@source/*": [
                "./source/*"
            ],
            "@stories/*": [
                "stories/*"
            ]
        }
    },
    "vueCompilerOptions": {
        "target": 2.7
    },
    "exclude": [
        "node_modules",
        "examples"
    ]
}